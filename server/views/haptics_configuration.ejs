<div class="form-header">
  <% if (Object.keys(errors).length === 0) { %>
    <h2>Send us a message</h2>
  <% } else { %>
    <h2 class="errors-heading">Oops, please correct the following:</h2>
    <ul class="errors-list">
      <% Object.values(errors).forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</div>

<form method="post" action="/haptics_configuration" novalidate enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="form-field <%= errors.email ? 'form-field-invalid' : '' %>">
    <label for="email">Email</label>
    <input class="input" id="email" name="email" type="email" value="<%= data.email %>" />
    <% if (errors.email) { %>
      <div class="error"><%= errors.email.msg %></div>
    <% } %>
  </div>
  <div class="form-field <%= errors.gesture ? 'form-field-invalid' : '' %>">
    <label for="gesture">Gesture</label>
    <select class="input" name = "gesture" id="gesture" type="gesture" value="<%= data.gesture %>">
        <option value="tap" selected >Tap</option>
        <option value="slide" >Slide</option>
        <option value="swipe" >Swipe</option>
        <option value="double_tap" >Double Tap</option>
        <option value="tap_hold" >Tap and Hold</option>
    </select>
    <% if (errors.gesture) { %>
      <div class="error"><%= errors.gesture.msg %></div>
    <% } %>
  </div>
  <div class="form-field <%= errors.message ? 'form-field-invalid' : '' %>">
    <label for="instructions">Instructions</label>
    <textarea class="input" id="instructions" name="instructions" rows="4" autofocus><%= data.instructions %></textarea>
    <% if (errors.instructions) { %>
      <div class="error"><%= errors.instructions.msg %></div>
    <% } %>
  </div>
  <div class="form-field">
    <label for="haptics_file">Haptics File</label>
    <input class="input" id="haptics_file" name="haptics_file" type="file" />
  </div>
  <div class="form-actions">
    <button class="btn" type="submit">Send</button>
  </div>
</form>
